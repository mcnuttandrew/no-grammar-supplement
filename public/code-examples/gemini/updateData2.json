              }
            ]
          }
        ]
      },
      "totalDuration": 2000
    },
    {
      "meta": {"name": "Design C - Using autoScaleOrder"},
      "timeline": {
        "concat": [
          {
            "component": "pause",
            "timing": {"duration": {"ratio": 0.2}}
          },
          {
            "component": {"mark": "marks"},
            "change": {"scale": false},
            "timing": {"duration": {"ratio": 0.4}}
          },
          {
            "sync": [
              {
                "component": {"axis": "y"},
                "timing": {"duration": {"ratio": 0.4}}
              },
              {
                "component": {"mark": "marks"},
                "change": {"data": false},
                "timing": {"duration": {"ratio": 0.4}}
              }
            ]
          }
        ],
        "enumerator": "alongT",
        "autoScaleOrder": ["marks"]
      },
      "totalDuration": 6000,
      "enumerators": [
        {
          "name": "alongT",
          "filter": "t",
          "stepSize": 1
        }
      ]
    },
    {
      "meta": {"name": "Design D - Fix Scale"},
      "timeline": {
        "concat": [
          {
            "concat": [
              {
                "component": "pause",
                "timing": {"duration": {"ratio": 0.1}}
              },
              {
                "component": {"mark": "marks"},
                "change": {"scale": false},
                "timing": {"duration": {"ratio": 0.7}}
              }
            ],
            "enumerator": "alongT"
          },
          {
            "sync": [
              {
                "component": {"axis": "y"},
                "timing": {"duration": {"ratio": 0.2}}
              },
              {
                "component": {"mark": "marks"},
                "timing": {"duration": {"ratio": 0.2}}
              }
            ]
          }
        ]
      },
      "totalDuration": 6000,
      "enumerators": [
        {
          "name": "alongT",
          "filter": "t",
          "stepSize": 1
        }
      ]
    }
  ],
