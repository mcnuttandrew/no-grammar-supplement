        "concat": [
          {
            "component": {"mark": "marks"},
            "change": {"scale": false},
            "timing": {"duration": {"ratio": 0.5}}
          },
          {
            "sync": [
              {
                "component": {"axis": "y"},
                "timing": {"duration": {"ratio": 0.5}}
              },
              {
                "component": {"mark": "marks"},
