{
  "$schema": "http://vegaar.hkustvis.org/schema/vega-ar/v5.json",
  "width": 250,
  "height": 250,
  "padding": 5,

  "signals": [
    { "name": "originX", "update": "width / 2" },
    { "name": "originY", "update": "height / 2" }
  ],

  "data": [
    {
      "name": "tree",
      "url": "http://vegaar.hkustvis.org/data/flare-tree.json",
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "tree",
          "method": "tidy",
          "size": [1, 100],
          "as": ["angle", "radius", "depth", "children"]
        },
        {
          "type": "formula",
          "expr": "(360 * datum.angle + 270) % 360",
          "as":   "angle"
        },
        {
          "type": "formula",
          "expr": "PI * datum.angle / 180",
          "as":   "radians"
        },
        {
          "type": "formula",
          "expr": "inrange(datum.angle, [90, 270])",
          "as":   "leftside"
        },
        {
          "type": "formula",
          "expr": "originX + datum.radius * cos(datum.radians)",
          "as":   "x"
        },
        {
          "type": "formula",
          "expr": "originY + datum.radius * sin(datum.radians)",
          "as":   "y"
        }
      ]
    },
    {
      "name": "links",
      "source": "tree",
      "transform": [
        { "type": "treelinks" },
        {
          "type": "linkpath",
          "shape": "diagonal", "orient": "radial",
          "sourceX": "source.radians", "sourceY": "source.radius",
          "targetX": "target.radians", "targetY": "target.radius"
        }
      ]
    }
  ],

  "ar": {
    "mode": "ON",
    "data": [
      {
        "name": "tree",
        "values": [
          {
            "id": 2,
            "name": "analytics",
            "parent": 1
          },
          {
            "id": 3,
            "name": "cluster",
            "parent": 2
          },
          {
            "id": 4,
            "name": "AgglomerativeCluster",
            "parent": 3,
            "size": 3938
          },
          {
            "id": 5,
            "name": "CommunityStructure",
            "parent": 3,
            "size": 3812
          },
          {
            "id": 6,
            "name": "HierarchicalCluster",
            "parent": 3,
            "size": 6714
          },
          {
            "id": 9,
            "name": "BetweennessCentrality",
            "parent": 8,
            "size": 3534
          },
          {
            "id": 10,
            "name": "LinkDistance",
            "parent": 8,
            "size": 5731
          },
          {
            "id": 11,
            "name": "MaxFlowMinCut",
            "parent": 8,
            "size": 7840
          },
          {
            "id": 12,
            "name": "ShortestPaths",
            "parent": 8,
            "size": 5914
          },
          {
            "id": 13,
            "name": "SpanningTree",
            "parent": 8,
            "size": 3416
          },
          {
            "id": 7,
            "name": "MergeEdge",
            "parent": 3,
            "size": 743
          },
          {
            "id": 8,
            "name": "graph",
            "parent": 2
          },

          {
            "id": 10000,
            "name": "PointInterpolator",
            "parent": 6,
            "size": 1675
          },
          {
            "id": 10001,
            "name": "PointInterpolator",
            "parent": 6,
            "size": 1675
          },
          {
            "id": 10000,
            "name": "PointInterpolator",
            "parent": 5,
            "size": 1675
          },
          {
            "id": 10001,
            "name": "PointInterpolator",
            "parent": 5,
            "size": 1675
          },
          {
            "id": 10000,
            "name": "PointInterpolator",
            "parent": 57,
            "size": 1675
          },
          {
            "id": 10001,
            "name": "PointInterpolator",
            "parent": 57,
            "size": 1675
          }
        ]
      }
    ]
  },

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": {"scheme": "tableau20"},
      "domain": {"data": "tree", "field": "depth"}
    }
  ],

  "marks": [
    {
      "type": "path",
      "from": {"data": "links"},
      "encode": {
        "update": {
          "x": {"signal": "originX"},
          "y": {"signal": "originY"},
          "path": {"field": "path"},
          "stroke": {"value": "#ccc"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "size": {"value": 100},
          "stroke": {"value": "#fff"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "fill": {"scale": "color", "field": "depth"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "text": {"field": "name"},
          "fontSize": {"value": 9},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "dx": {"signal": "(datum.leftside ? -1 : 1) * 6"},
          "angle": {"signal": "datum.leftside ? datum.angle - 180 : datum.angle"},
          "align": {"signal": "datum.leftside ? 'right' : 'left'"}
        }
      }
    }
  ]
}
